{
  "compilerOptions": {
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "importHelpers": true,
    "pretty": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}